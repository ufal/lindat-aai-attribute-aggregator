{
  "apps": [
    {
      "name": "java-solr-for-aaggregator",
      "exec_mode": "fork",
      "cwd": "/opt/aaggregator/solr/",
      "args": [
        "start",
        "-h",
        "localhost",
        "-d",
        "server",
        "-s",
        "installation",
        "-p",
        "8983",
        "-m",
        "386m",
        "-V",
        "-f"
      ],
      "script": "bin/solr",
      "watch" : false,
      "autorestart": true,
      "node_args": [],
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "exec_interpreter": "bash",
      "env": {}
    },
    {
      "name": "node-aaggregator",
      "exec_mode": "fork_mode",
      "cwd": "./",
      "script": "backend/app.js",
      "watch" : false,
      "autorestart": true,
      "env": {
        "NODE_ENV": "production",
        "HOSTNAME": "127.0.0.1",
        "PORT": "3001"
      }
    }
  ],

  "deploy" : {
    "clarin-aa" : {
      "user" : "node",
      "host" : "clarin-aa.ms.mff.cuni.cz",
      "repo" : "https://github.com/ufal/lindat-aai-attribute-aggregator.git",
      "ref"  : "origin/master",
      "path" : "/opt/aaggregator/installation/",
      "post-deploy" : "npm install && EMAIL_BACKEND=sendmail pm2 startOrRestart pm2.json --env production"
    }
  }

}