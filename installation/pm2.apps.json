{
  "apps": [
    {
      "name": "java-solr-for-aaggregator",
      "cwd": "/opt/aaggregator/solr/",
      "args": [
        "start",
        "-h",
        "localhost",
        "-d",
        "server",
        "-s",
        "installation",
        "-p",
        "8983",
        "-m",
        "386m",
        "-V",
        "-f"
      ],
      "env": {
      },
      "script": "bin/solr",
      "node_args": [],
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "exec_interpreter": "bash",
      "exec_mode": "fork"
    },
    {
      "name": "node-aaggregator",
      "exec_mode": "fork_mode",
      "cwd": "",
      "script": "/opt/aaggregator/aaggreg/backend/app.js",
      "watch" : ["/opt/aaggregator/aaggreg/backend"],
      "ignore_watch" : ["node_modules", "www"],
      "autorestart": true,
      "env": {
        "NODE_ENV": "production",
        "HOSTNAME": "127.0.0.1",
        "PORT": "3001"
      }
    }
  ]
}